{
  "name": "seatbelt-for-ghosts",
  "version": "1.0.0-alpha.0",
  "engines": {
    "node": ">=14.x"
  },
  "description": "Make governance safer",
  "scripts": {
    "compile": "hardhat compile",
    "start": "ts-node index.ts",
    "ci:matrix": "ts-node scripts/generate-matrix.ts",
    "ci:readme": "ts-node scripts/generate-readme.ts && prettier --write README.md",
    "build:build-matrix-script": "npx esbuild scripts/generate-matrix.ts --tsconfig=./tsconfig.json --bundle --outfile=.github/actions/generate-matrix/index.js --platform=node --target=es6",
    "lint:fix": "prettier --write .",
    "test": "jest .",
    "prepare": "husky install",
    "pre-commit": "yarn build:build-matrix-script && lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bgd-labs/seatbelt-for-ghosts.git"
  },
  "keywords": [
    "aave",
    "governance",
    "safety"
  ],
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/bgd-labs/seatbelt-for-ghosts/issues"
  },
  "homepage": "https://github.com/bgd-labs/seatbelt-for-ghosts#readme",
  "dependencies": {
    "@aave/contract-helpers": "^1.3.8",
    "@actions/cache": "^3.0.0",
    "@bgd-labs/aave-address-book": "^1.3.0",
    "@bgd-labs/aave-cli": "^0.0.5",
    "@supercharge/promise-pool": "^2.3.0",
    "bignumber.js": "^9.0.2",
    "bn.js": "^5.2.1",
    "dotenv": "^16.0.1",
    "ethers": "^5.6.9",
    "gray-matter": "^4.0.3",
    "jest": "^28.1.2",
    "micro-ftch": "^0.3.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.8.2",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5"
  },
  "lint-staged": {
    "*.ts": "prettier --write",
    "*.md": "prettier --write"
  }
}
